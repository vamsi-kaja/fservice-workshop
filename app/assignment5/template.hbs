<div class="page-container">
  <form>
    <div class="form-group">
      <label for="input-field">
        Input field
      </label>
      <input type="text" id="input-field" placeholder="field" class="form-control" />
    </div>
    <div class="form-group">
      <label for="input-field">
        Disabled Input field
      </label>
      <input type="text" id="input-field" placeholder="field" class="form-control disabled" />
    </div>
    <div class="form-group">
      <label for="input-field-erro">
        Error Input field
      </label>
      <input type="text" id="input-field-error" placeholder="field" class="form-control error-field" />
      <div class="form-error">Is a required field</div>
    </div>
    <div class="form-group">
      <label for="textarea-field">
        Textarea field
      </label>
      <textarea class="form-control" id="textarea-field" placeholder="field"></textarea>
    </div>

    <div class="form-group">
      <div class="form-search">
        {{svg-jar "magnify" class="search-icon"}}
        <input type="text" class="search-input form-control" placeholder="Search something"/>
        {{svg-jar "loader" class="loading-icon"}}
      </div>
    </div>


    <div>
      <button class="btn btn-default" type="button">Cancel</button>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>
{{outlet}}