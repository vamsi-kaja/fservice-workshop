<form class="form content-wrapper">
  <div class="form-group">
    <label for="input-field">
      Input field
    </label>
    <input type="text" id="input-field" placeholder="field" class="form-control" />
  </div>
  <div class="form-group">
    <label for="input-field">
      Disabled field
    </label>
    <input type="text" id="input-field" disabled="true" placeholder="field" class="form-control" />
  </div>
  <div class="form-group">
    <label for="search-field">
      Search field
    </label>
    <div class="search-wrapper">
      {{svg-jar "search" class="icon-search input-icon input-icon-left"}}
    <input type="text" id="search-field" placeholder="field" class="form-control search-field" />
      {{svg-jar "loading" class="icon-loading input-icon input-icon-right"}}

    </div>
  </div>
  <div class="form-group field-error">
    <label for="input-field-erro">
      Error Input field
    </label>
    <input type="text" id="input-field-erro" placeholder="field" class="form-control" />
    <div class="form-error">Is a required field</div>
  </div>
  <div class="form-group">
    <label for="textarea-field">
      Textarea field
    </label>
    <textarea  class="form-control textarea-field"  id="textarea-field" placeholder="field" rows="3"></textarea>
  </div>
  <div>
    <button class="btn btn-default" type="button">Cancel</button>
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
{{outlet}}